<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="나의 그룹 코드는"
        android:textColor="#000000"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="asdfsadf"
        android:textColor="#000000"
        android:id="@+id/groupcode"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="초대받은 그룹이 있나요?"
        android:id="@+id/invite"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_warning"
        android:layout_below="@+id/createGroup">
    </Button>
    <Button
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
        android:layout_marginTop="290dp"
        android:id="@+id/createGroup"
    android:text="그룹 생성하기"
    android:textColor="#ffffff"
    android:textSize="16dp"
    android:background="@drawable/button_warning"
        android:layout_below="@+id/groupcode"
        android:layout_centerHorizontal="true">
</Button>
</RelativeLayout>