<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myLayout">

    <ImageView
        android:layout_width="@dimen/activity_lockScreen_imageSize"
        android:layout_height="@dimen/activity_lockScreen_imageSize"
        android:layout_marginStart="20dp"
        android:layout_marginRight="@dimen/activity_lockScreen_margin_small"
        android:layout_alignBottom="@+id/select"
        android:layout_alignParentStart="true"
        android:background="@drawable/alert_image"
        android:id="@+id/alert">
    </ImageView>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/select_image"
        android:id="@+id/select"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </ImageView>

    <ImageView
        android:layout_width="@dimen/activity_lockScreen_imageSize"
        android:layout_height="@dimen/activity_lockScreen_imageSize"
        android:layout_marginLeft="@dimen/activity_lockScreen_margin_small"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/select"
        android:layout_alignParentEnd="true"
        android:background="@drawable/unlock_image"
        android:id="@+id/unlock">
    </ImageView>

</RelativeLayout>