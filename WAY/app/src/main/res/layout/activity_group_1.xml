<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="나의 그룹 코드는"
        android:textColor="#000000"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="asdfsadf"
        android:textColor="#000000"
        android:id="@+id/groupcode"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:divider="#00000000"
        android:dividerHeight="1dip"
        android:id="@+id/alertList"
        android:layout_below="@+id/groupcode"
        android:layout_alignParentStart="true">
    </ListView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="4"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="나의 그룹에 초대하기"
        android:id="@+id/register"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:background="@drawable/button_warning"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/alertList">
    </Button>
</RelativeLayout>