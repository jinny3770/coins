<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lockscreen_image">

    <ImageView
        android:layout_marginRight="@dimen/activity_lockScreen_margin_small"
        android:layout_width="@dimen/activity_lockScreen_imageSize"
        android:layout_height="@dimen/activity_lockScreen_imageSize"
        android:background="@drawable/alert_image"
        android:id="@+id/alert"
        android:layout_alignTop="@+id/select"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>

    <ImageView
        android:layout_width="@dimen/activity_lockScreen_imageSize"
        android:layout_height="@dimen/activity_lockScreen_imageSize"
        android:background="@drawable/lock_image"
        android:id="@+id/select"
        android:layout_marginBottom="@dimen/activity_lockScreen_margin_large"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </ImageView>

    <ImageView
        android:layout_marginLeft="@dimen/activity_lockScreen_margin_small"
        android:layout_width="@dimen/activity_lockScreen_imageSize"
        android:layout_height="@dimen/activity_lockScreen_imageSize"
        android:background="@drawable/unlock_image"
        android:id="@+id/unlock"
        android:layout_alignTop="@+id/select"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </ImageView>
</RelativeLayout>