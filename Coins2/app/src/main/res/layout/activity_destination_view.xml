<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/departureTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_destinationShape_margin"
                android:textSize="@dimen/activity_destinationShape_TextSize" />

            <TextView
                android:id="@+id/aroundTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/activity_destinationShape_margin"
                android:textSize="@dimen/activity_destinationShape_TextSize" />

        </RelativeLayout>

        <TextView
            android:id="@+id/arriveTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_destinationShape_margin"
            android:textSize="@dimen/activity_destinationShape_TextSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>