<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sora.coins">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.example.sora.coins.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.example.sora.coins.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".Main.MainActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""></activity>

        <activity
            android:name=".LockScreen.LockScreenActivity"
            android:excludeFromRecents="true"
            android:taskAffinity=""></activity>

        <activity
            android:name=".Chat.ChatActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"></activity>

        <activity
            android:name=".Chat.SendBirdChatActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Chat.SendBirdUserListActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Chat.SendBirdMemberListActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Chat.SendBirdChannelListActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Chat.SendBirdMessagingActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Chat.SendBirdMessagingChannelListActivity"
            android:configChanges="orientation|screenSize"
            android:label="SendBird"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"></activity>

        <activity
            android:name=".Main.SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".Sidebar.SideGroupActivity" />
        <activity android:name=".Sidebar.SideSettingActivity" />
        <activity android:name=".Sidebar.SideWarningActivity" />
        <activity android:name=".Sidebar.LoginActivity" />
        <activity android:name=".Sidebar.SignUpActivity" />
        <activity android:name=".Sidebar.ProfileActivity" />
        <activity android:name=".Destination.DestinationSelectActivity" />
        <activity android:name=".Destination.DestinationListActivity" />
        <activity android:name=".Destination.DestinationViewActivity" />
        <activity android:name=".LockScreenActivity" />


        <service android:name=".LockScreen.LockScreenService" />
        <service android:name=".etc.GCMIntentService" />


        <receiver android:name=".LockScreen.LockScreenReceiver" />
        <receiver android:name=".LockScreen.DeliverReceiver" />
        <receiver android:name=".LockScreen.SendReceiver" />


    </application>
</manifest>